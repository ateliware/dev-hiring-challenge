  },
  "homepage": "https://github.com/johnfaria/dev-hiring-challenge#readme",
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "module-alias": "^2.2.2",
    "ts-jest": "^26.4.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.8",
    "@types/express": "^4.17.8",
    "@types/jest": "^26.0.15",
    "@types/module-alias": "^2.0.0",
