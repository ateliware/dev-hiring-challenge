<div class="w-full h-full flex items-center justify-center mt-10">
  <%= if not @loading do %>
    <div class="grid grid-cols-1 place-items-center lg:grid-cols-2 w-full mx-4 gap-x-4 gap-y-8">
    <%= for language <- @languages do %>
      <.live_component module={LanguageCard} id={"#{language.name}-card"} language={language} />
    <% end %>
    </div>
  <% end %>
</div>
