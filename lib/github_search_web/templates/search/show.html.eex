<h1>Show Search</h1>

<ul>

  <li>
    <strong>Language:</strong>
    <%= String.capitalize(@search.language) %>
  </li>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>language</th>
        <th>Url</th>

        <th></th>
      </tr>
    </thead>
    <tbody>

  <%= for repository <- @search.repositories do %>
      <tr>
        <td><%= repository.name %></td>
        <td><%= repository.description %></td>
        <td><%= repository.language %></td>
        <td><span><%= link "#{repository.url}", to: repository.url %></span></td>

        <td>
          <span><%= link "Show", to: Routes.repository_path(@conn, :show, repository) %></span>
        </td>
      </tr>
  <% end %>
    </tbody>
  </table>

</ul>

<span><%= link "Back", to: Routes.search_path(@conn, :index) %></span>
