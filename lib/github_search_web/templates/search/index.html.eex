<h1>Listing Searchs</h1>

<table>
  <thead>
    <tr>
      <th>Language</th>
      <th>Searched at<th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for search <- @searchs do %>
    <tr>
      <td><%= String.capitalize(search.language) %></td>
      <td><%= search.inserted_at %></td>

      <td>
        <span><%= link "Show", to: Routes.search_path(@conn, :show, search) %></span>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<span><%= link "New Search", to: Routes.search_path(@conn, :new) %></span>
