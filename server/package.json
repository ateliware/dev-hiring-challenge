{
  "name": "server-node",
  "version": "1.0.0",
  "main": "app.js",
  "license": "MIT",
  "scripts": {
    "start": "node app.js",
    "prestart": "npx sequelize-cli db:migrate NODE_ENV=production",
    "migrate": "npx sequelize-cli db:migrate",
    "test": "cross-env NODE_ENV=test jest --testTimeout=10000",
    "migrate:reset": "npx sequelize-cli db:migrate:undo:all && npm run migrate",
    "pretest": "cross-env NODE_ENV=test npm run migrate:reset",
    "coverage": "npm run pretest && jest --coverage && cat ./coverage/lcov.info | coveralls"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "verbose": true
  },
  "dependencies": {
    "async": "^3.1.0",
    "dotenv": "^8.0.0",
    "ejs": "^3.0.1",
    "express": "^4.17.1",
    "lodash": "^4.17.15",
    "morgan": "^1.9.1",
    "pg": "^7.14.0",
    "pg-hstore": "^2.3.3",
    "sequelize": "^5.12.3",
    "serve-favicon": "^2.5.0"
  },
  "devDependencies": {
    "coveralls": "^3.0.6",
    "cross-env": "^5.2.0",
    "jest": "^24.9.0",
    "nodemon": "^1.19.1",
    "supertest": "^4.0.2"
  }
}
