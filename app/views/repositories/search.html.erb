<%= render 'navbar'%>
<div class="container">
  <div class="mb-3">
    <div class="row">
      <div class="col">
        <%= form_with url: 'repositories_api_search', class:"form-inline",
        local: true, method: :get do |form| %> <%= form.text_field :query,
        class:"form-control mr-sm-2",value: params[:query], placeholder: 'Digite aqui sua pesquisa', required: true %>
      </div>

      <div class="col">
        <%= form.select(:language, ["C", "Elixir", "Go", "Java",
        "JavaScript","Ruby", "TypeScript"], {selected: params[:language]},
        class: 'form-select') %>
      </div>
    </div>
    <div class="row">
      <%= form.submit "Pesquisar", class:"btn btn-primary my-2 my-sm-0" %> <%end
      %>
    </div>
  </div>
</div>
